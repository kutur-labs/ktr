{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ktr",
  "scopeName": "source.ktr",
  "fileTypes": ["ktr"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#search-block-keywords" },
    { "include": "#types" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#function-call" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ktr",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ktr",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ktr",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ktr",
          "match": "\\b(input|fn|let|return|require|export|search|assert|as|piece)\\b"
        }
      ]
    },
    "search-block-keywords": {
      "patterns": [
        {
          "name": "keyword.other.ktr",
          "match": "\\b(bounds|initial|tolerance)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.ktr",
          "match": "\\b(mm|cm|f64|i64|bool|point|bezier|length|percentage)\\b"
        },
        {
          "name": "storage.type.ktr",
          "match": "\\b[A-Z][a-zA-Z0-9]*\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.with-unit.ktr",
          "match": "\\b\\d+(\\.\\d+)?(mm|cm)\\b"
        },
        {
          "name": "constant.numeric.float.ktr",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.ktr",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.ktr",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.ktr",
          "match": "(\\+|-|\\*|/)"
        },
        {
          "name": "keyword.operator.assignment.ktr",
          "match": "="
        },
        {
          "name": "keyword.operator.range.ktr",
          "match": "\\.\\."
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.ktr",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.parameters.ktr",
          "match": "[()]"
        },
        {
          "name": "punctuation.definition.bracket.ktr",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.separator.ktr",
          "match": "[:,]"
        },
        {
          "name": "punctuation.accessor.ktr",
          "match": "\\."
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "name": "entity.name.function.ktr",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.ktr",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
