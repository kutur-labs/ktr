input neck_to_shoulder_top_height = 40mm
input shoulder_top_to_chest_height = 180mm
input chest_to_waist_height = 240mm
input waist_to_bottom_height = 100mm
input shoulder_width = 170mm
input neckhole_depth = 30mm
input armhole_depth = 55mm
input chest_width = 580mm

let top_left_point = point(0mm, 0mm)
let top_middle_point = point(chest_width / 2, 0mm)
let top_right_point = point(chest_width, 0mm)
let top_left_line = line(top_left_point, top_middle_point)
let top_right_line = line(top_middle_point, top_right_point)

let sleeve_left_point = point(0mm, neck_to_shoulder_top_height)
let sleeve_middle_point = point(chest_width / 2, neck_to_shoulder_top_height)
let sleeve_right_point = point(chest_width, neck_to_shoulder_top_height)
let sleeve_left_line = line(sleeve_left_point, sleeve_middle_point)
let sleeve_right_line = line(sleeve_middle_point, sleeve_right_point)

let top_middle_to_sleeve_middle_line = line(top_middle_point, sleeve_middle_point)

let top_armhole_left_point = point(armhole_depth, 0mm)
let sleeve_armhole_left_point = point(armhole_depth, neck_to_shoulder_top_height)
let chest_armhole_left_point = point(armhole_depth, neck_to_shoulder_top_height + shoulder_top_to_chest_height)

let top_armhole_right_point = point(chest_width - armhole_depth, 0mm)
let sleeve_armhole_right_point = point(chest_width - armhole_depth, neck_to_shoulder_top_height)
let chest_armhole_right_point = point(chest_width - armhole_depth, neck_to_shoulder_top_height + shoulder_top_to_chest_height)

let top_neckhole_left_point = point(armhole_depth + shoulder_width, 0mm)
let bottom_neckhole_left_point = point(armhole_depth + shoulder_width, neck_to_shoulder_top_height + neckhole_depth)

let top_neckhole_right_point = point(chest_width - armhole_depth - shoulder_width, 0mm)
let bottom_neckhole_right_point = point(chest_width - armhole_depth - shoulder_width, neck_to_shoulder_top_height + neckhole_depth)

let bottom_neckhole_mid_point = point(chest_width / 2, neck_to_shoulder_top_height + neckhole_depth)

let chest_left_point = point(0mm, neck_to_shoulder_top_height + shoulder_top_to_chest_height)
let chest_middle_point = point(chest_width / 2, neck_to_shoulder_top_height + shoulder_top_to_chest_height)
let chest_right_point = point(chest_width, neck_to_shoulder_top_height + shoulder_top_to_chest_height)
let chest_left_line = line(chest_left_point, chest_middle_point)
let chest_right_line = line(chest_middle_point, chest_right_point)

let chest_middle_to_waist_middle_line = line(sleeve_middle_point, chest_middle_point)

let waist_left_point = point(0mm, chest_left_point.y + chest_to_waist_height)
let waist_middle_point = point(chest_width / 2, chest_left_point.y + chest_to_waist_height)
let waist_right_point = point(chest_width, chest_left_point.y + chest_to_waist_height)
let waist_left_line = line(waist_left_point, waist_middle_point)
let waist_right_line = line(waist_middle_point, waist_right_point)

let waist_middle_to_bottom_middle_line = line(chest_middle_point, waist_middle_point)

let bottom_left_point = point(0mm, waist_left_point.y + waist_to_bottom_height)
let bottom_middle_point = point(chest_width / 2, waist_left_point.y + waist_to_bottom_height)
let bottom_right_point = point(chest_width, waist_left_point.y + waist_to_bottom_height)
let bottom_left_line = line(bottom_left_point, bottom_middle_point)
let bottom_right_line = line(bottom_middle_point, bottom_right_point)

let bottom_middle_to_sleeve_middle_line = line(waist_middle_point, bottom_middle_point)

let sleeve_left_curve_cp1 = point(chest_armhole_left_point.x, chest_armhole_left_point.y)
let sleeve_left_curve_cp2 = point(armhole_depth + 30mm, 100mm + neck_to_shoulder_top_height)
let sleeve_left_curve = bezier(chest_left_point, sleeve_left_curve_cp1, sleeve_left_curve_cp2, sleeve_armhole_left_point)

let sleeve_right_curve_cp1 = point(chest_armhole_right_point.x, chest_armhole_right_point.y)
let sleeve_right_curve_cp2 = point(chest_width - armhole_depth - 30mm, 100mm + neck_to_shoulder_top_height)
let sleeve_right_curve = bezier(chest_right_point, sleeve_right_curve_cp1, sleeve_right_curve_cp2, sleeve_armhole_right_point)

let neck_left_curve_cp1 = point(top_neckhole_left_point.x - 10mm, neckhole_depth + 10mm)
let neck_left_curve_cp2 = point(top_neckhole_left_point.x + 10mm, bottom_neckhole_mid_point.y)
let neck_left_curve = bezier(top_neckhole_left_point, neck_left_curve_cp1, neck_left_curve_cp2, bottom_neckhole_mid_point)

let neck_right_curve_cp1 = point(top_neckhole_right_point.x + 10mm, neckhole_depth + 10mm)
let neck_right_curve_cp2 = point(top_neckhole_right_point.x - 10mm, bottom_neckhole_mid_point.y)
let neck_right_curve = bezier(top_neckhole_right_point, neck_right_curve_cp1, neck_right_curve_cp2, bottom_neckhole_mid_point)

let shoulder_left_line = line(top_neckhole_left_point, sleeve_armhole_left_point)
let shoulder_right_line = line(top_neckhole_right_point, sleeve_armhole_right_point)

let side_left_line = line(chest_left_point, waist_left_point)
let side_right_line = line(chest_right_point, waist_right_point)

let hem_left_line = line(waist_left_point, bottom_left_point)
let hem_right_line = line(waist_right_point, bottom_right_point)
