---
import MainLayout from "../layouts/main-layout.astro";

const defaultCode = `input bust = 920mm
input waist = 720mm
input back_length = 410mm
input shoulder = 130mm
input ease = 40mm

let q_bust = (bust + ease) / 4
let q_waist = (waist + ease / 2) / 4
let neck_w = bust / 16 + 2mm
let neck_drop = neck_w + 8mm
let armhole_d = bust / 8 + back_length / 8 + 25mm
let sh_drop = back_length / 16
let dart_intake = q_bust - q_waist
let bp_x = q_bust / 2 + 10mm
let bp_y = armhole_d - sh_drop
let arm_ease = ease / 8

let cf_neck = point(0mm, neck_drop)
let neck_a = point(neck_w / 3, neck_drop / 3)
let neck_b = point(neck_w * 2 / 3, neck_drop / 6)
let neck_pt = point(neck_w, 0mm)
let sh_tip = point(neck_w + shoulder, sh_drop)
let arm_a = point(q_bust + arm_ease, sh_drop + armhole_d / 5)
let arm_b = point(q_bust + arm_ease * 2, armhole_d / 2)
let arm_c = point(q_bust + arm_ease, armhole_d * 3 / 4)
let underarm = point(q_bust, armhole_d)
let side_waist = point(q_waist, back_length)
let dart_r = point(bp_x + dart_intake / 2, back_length)
let bust_pt = point(bp_x, bp_y)
let dart_l = point(bp_x - dart_intake / 2, back_length)
let cf_waist = point(0mm, back_length)`;
