input radius = 180mm
input bloom = 90mm
input twist = 45mm

fn petal(dx: f64, dy: f64, px: f64, py: f64, r: f64) {
    let origin = point(0mm, 0mm)
    let tip = point(dx * r * radius, dy * r * radius)
    let c1 = point(px * bloom + dx * r * twist, py * bloom + dy * r * twist)
    let c2 = point(dx * r * radius * 0.65 + px * bloom * 0.3, dy * r * radius * 0.65 + py * bloom * 0.3)
    return bezier(origin, c1, c2, tip)
}

